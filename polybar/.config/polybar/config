; vim:ft=dosini
[colors]
background = #111
background-alt = #333
background-visible = #222
foreground = #dfdfdf
alert = #bd2c40

bright-white = #f8f8f8
cyan = #86c1b9
green = #a1b56c
orange = #dc9656
white = #d8d8d8
yellow = #f7ca88


[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 30
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = DejaVu Sans:size=13;3
font-1 = FontAwesome:size=8;2
font-2 = Font Awesome 6 Brands Regular:size=11;3

modules-left = i3
modules-right = docker mpd pulseaudio vpn wlan xkeyboard filesystem battery date menu_power

tray-position = right
tray-padding = 2

cursor-click = pointer


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true
strip-wsnumbers = true
enable-scroll = false

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.white}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${colors.bright-white}
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.bright-white}
label-focused-padding = 3

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-foreground = ${colors.bright-white}
label-visible-background = ${colors.background-visible}
label-visible-padding = ${self.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}


[module/filesystem]
type = internal/fs
mount-0 = /
interval = 10
label-mounted = %mountpoint% %free%


[module/xkeyboard]
type = internal/xkeyboard
label-layout = %layout%


[module/mpd]
type = internal/mpd
format-online = <label-song> <icon-prev> <toggle> <icon-next>

; En dash U+2013
label-song = %artist% – %title%

icon-prev = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 80
label-song-ellipsis = true


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%

ramp-signal-0 = 
ramp-signal-foreground = ${colors.foreground}


[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}
label-muted =  muted
label-muted-foreground = ${colors.foreground}
click-right=pulsemixerdd &


[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-foreground = ${colors.foreground}


[module/menu_power]
type = custom/text
content = x
click-left = menu-power


[module/docker]
type = custom/script
exec = 'docker' ps -aq | wc -l
; Only show if docker daemon is running and there are containers.
exec-if = docker ps && [ "$(docker ps -a | wc -l)" != "1" ]
label = %output%
format-prefix = " "
interval = 5


[module/vpn]
type = custom/script
exec = echo 'VPN'
; Only show if a VPN connection is active.
exec-if = [ -n "$(nmcli con show --active | awk '$3~/^vpn$/ { print $3 }')" ]
label = %output%
format-prefix = " "
interval = 3


[module/date]
type = custom/script
exec = date '+%a, %b %d %H:%M'
interval = 5
click-left = caldd &


[settings]
screenchange-reload = true
