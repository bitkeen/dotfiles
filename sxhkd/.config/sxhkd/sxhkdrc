# Select a program to run.
super+shift+d
    menu-run

# Select a program shipping a .desktop file.
super+d
    menu-desktop

# Tmux session selection menu.
super+t
    menu-tmux

# Power menu.
super+shift+z
    menu-power

# Switch active window.
super+n
    simpleswitcher-configured

# Screen lock.
super+shift+x
    screen-lock

# Toggle screen brightness level.
super+b
    toggle-brightness

# Connect to a Bluetooth device.
super+shift+b
    menu-bluetooth-connect

# Disconnect from a Bluetooth device.
super+shift+n
    menu-bluetooth-disconnect

# Mount/unmount menus.
super+shift+m
    menu-udisks-mount
super+shift+u
    menu-udisks-unmount

# Media player controls.
# Mod+/
super+slash
	mpc toggle
# Mod+.
super+period
	mpc next
# Mod+,
super+comma
	mpc-prev-wrapper
super+question
    menu-mpd

# Print screen.
Print
    screenshot -u
# Bindings similar to those on MacOS.
super+control+4
    screenshot -u
super+control+5
    screenshot -u -s

# Volume controls.
XF86AudioRaiseVolume
    pulse-volume increase
XF86AudioLowerVolume
    pulse-volume decrease
XF86AudioMute
    pulse-volume mute
# Set thumb mouse buttons to raise and lower the volume.
button9
    pulse-volume increase
button8
    pulse-volume decrease

# Bluetooth headset buttons.
XF86AudioPause
    mpc pause
XF86AudioPlay
    mpc play
XF86AudioPrev
    mpc-prev-wrapper
XF86AudioNext
	mpc next

# Sreen brightness controls.
XF86MonBrightnessUp
    light -A 10
XF86MonBrightnessDown
    light -U 10

# Directly switch to a keyboard layout.
super+ctrl+1
    xkb-switch -s us
super+ctrl+2
    xkb-switch -s ru
super+ctrl+3
    xkb-switch -s ua

# GUI programs.
# Run with i3-msg to get a "loading" cursor.
super+shift+a
    i3-msg 'exec anki'
super+shift+f
    i3-msg 'exec firefox'
super+shift+t
    i3-msg 'exec qbittorrent'
super+shift+o
    i3-msg "exec --no-startup-id $TERMINAL -e ranger"
super+c
    caldd
super+v
    weatherdd

super+x
    todoterm
super+e
    scratchterm

super+shift+s
    menu-screenlayout

# Dunst
# Previous default (ctrl+space) now conflicts with tmux prefix binding.
ctrl+shift+space
    dunstctl close
ctrl+grave
    dunstctl history-pop
ctrl+shift+period
    dunstctl context

# Ctrl-q closes window in Firefox, there is currently no way to disable
# it in the browser config. The binding can also be used by other
# programs, so disabling it system-wide might not be the best solution,
# although I don't think I have a program that binds Ctrl-q to something
# other than "quit".
ctrl+q
    :
