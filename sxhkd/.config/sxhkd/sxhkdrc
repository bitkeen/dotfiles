# Select a program to run.
super+shift+d
    dmenu_run

# Select a program shipping a .desktop file.
# Run with 'sh -c' to find dmenu-configured in $PATH.
super+d
    i3-dmenu-desktop --dmenu='sh -c dmenu-configured'

# Tmux session selection menu.
super+t
    dmenu-tmux

# Power menu.
super+shift+z
    dmenu-power

# Switch active window.
super+n
    simpleswitcher-configured

# Screen lock.
super+shift+x
    screen-lock

# Toggle screen brightness level.
super+b
    toggle-brightness

# Open a book.
super+shift+b
    dmenu-books

# Mount/unmount menus.
super+shift+m
    dmenu-udisks-mount
super+shift+u
    dmenu-udisks-unmount

# Media player controls.
# Mod+/
super+slash
	mpc toggle
# Mod+.
super+period
	mpc next
# Mod+,
super+comma
	mpc-prev-wrapper
super+question
    dmenu-mpd

# Print screen.
Print
    screenshot -u
# Bindings similar to those on MacOS.
super+control+4
    screenshot -u
super+control+5
    screenshot -u -s

# Volume controls.
XF86AudioRaiseVolume
    pulse-volume increase
XF86AudioLowerVolume
    pulse-volume decrease
XF86AudioMute
    pulse-volume mute
# Set thumb mouse buttons to raise and lower the volume.
button9
    pulse-volume increase
button8
    pulse-volume decrease

# Bluetooth headset buttons.
XF86AudioPause
    mpc toggle
XF86AudioPlay
    mpc toggle
XF86AudioPrev
    mpc-prev-wrapper
XF86AudioNext
	mpc next

# Sreen brightness controls.
XF86MonBrightnessUp
    light -A 10
XF86MonBrightnessDown
    light -U 10

# Directly switch to a keyboard layout.
super+ctrl+1
    xkb-switch -s us
super+ctrl+2
    xkb-switch -s ru
super+ctrl+3
    xkb-switch -s ua

# GUI programs.
# Run with i3-msg to get a "loading" cursor.
super+shift+a
    i3-msg 'exec anki'
super+shift+f
    i3-msg 'exec firefox'
super+shift+t
    i3-msg 'exec qbittorrent'
super+shift+o
    i3-msg "exec --no-startup-id $TERMINAL -e ranger"
super+c
    caldd
super+v
    weatherdd

super+x
    todoterm
super+e
    scratchterm

super+shift+s
    dmenu-screenlayout

# Dunst
# Previous default (ctrl+space) now conflicts with tmux prefix binding.
ctrl+shift+space
    dunstctl close
ctrl+grave
    dunstctl history-pop
ctrl+shift+period
    dunstctl context

# Ctrl-q closes window in Firefox, there is currently no way to disable
# it in the browser config. The binding can also be used by other
# programs, so disabling it system-wide might not be the best solution,
# although I don't think I have a program that binds Ctrl-q to something
# other than "quit".
ctrl+q
    :
