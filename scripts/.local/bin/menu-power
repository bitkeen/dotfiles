#!/bin/sh
# Use menu to reboot, shutdown, suspend, etc.
# Pass arguments to menu.

commands="lock\nreboot\nshutdown\nsuspend\nexit i3\ncancel"

choice=$(printf "%b" "$commands" | menu-generic "$@")

case "$choice" in
    "lock")
        screen-lock
        ;;
    "reboot")
        reboot
        ;;
    "shutdown")
        poweroff
        ;;
    "suspend")
        systemctl suspend
        ;;
    "cancel")
        exit
        ;;
    "exit i3")
        # Exit i3 (logs you out of your X session).
        i3-msg exit
        ;;
esac
