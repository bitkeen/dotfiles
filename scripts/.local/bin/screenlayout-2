#!/bin/sh
# Laptop screen + an external display.

secondary="$(get-secondary-display)"

xrandr \
    --output eDP-1 --primary --mode 1920x1080 --pos 0x1080 --rotate normal \
    --output "$secondary" --mode 1920x1080 --pos 0x0 --rotate normal

i3-msg '[workspace="8"]' move workspace to output eDP-1
i3-msg '[workspace="9"]' move workspace to output eDP-1

i3-msg '[workspace="1"]' move workspace to output "$secondary"
i3-msg '[workspace="2"]' move workspace to output "$secondary"
i3-msg '[workspace="3"]' move workspace to output "$secondary"
i3-msg '[workspace="4"]' move workspace to output "$secondary"
i3-msg '[workspace="5"]' move workspace to output "$secondary"
i3-msg '[workspace="6"]' move workspace to output "$secondary"
i3-msg '[workspace="7"]' move workspace to output "$secondary"
i3-msg '[workspace="0"]' move workspace to output "$secondary"

screenlayout-reload
