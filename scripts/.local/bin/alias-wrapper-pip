#!/bin/sh
# Aliases for pip.

key="$1"
case "$key" in
    in)
        cmd='install';;
    ir)
        cmd='install -r requirements.txt';;
    iu)
        cmd='install --upgrade';;
    sw)
        cmd='show';;
    un)
        cmd='uninstall';;
    *)
        cmd="$key";;
esac
[ -n "$cmd" ] && shift

# shellcheck disable=SC2086
'pip' $cmd "$@"
