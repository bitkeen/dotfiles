#!/bin/sh
# Use a screenlayout selected with dmenu.

scripts_dir="$HOME/.local/bin/"

options="$(find "$scripts_dir" -name 'screenlayout-*' | sort)"
choice="$(
    echo "$options" |
    awk -F '/' '{print $NF}' |
    dmenu-configured -p 'Screen layout:'
)"
[ -z "$choice" ] && exit 1

full_choice="$(echo "$options" | grep "${choice}\$")"
exec "$full_choice"
