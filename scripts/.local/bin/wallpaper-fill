#!/bin/sh
# Set wallpaper, zoom the image until it fits, preserve aspect ratio.
if [ -z "${1}" ]; then
    echo 'Missing image path'
    exit 1
fi

image_path="$(readlink --canonicalize "${1}")"
hsetroot -cover "${image_path}" \
    && printf "#!/bin/sh\nhsetroot -cover %s" "${image_path}" > ~/.wallpaper \
    && chmod +x ~/.wallpaper
