!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! URxvt
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

URxvt.font: xft:Source Code Pro:size=13
URxvt.scrollBar: false
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.depth: 32


!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! Extensions
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

URxvt.perl-ext-common: default,matcher,font-size,keyboard-select
URxvt.colorUL:		#4682B4

! matcher extension - clickable urls.
URxvt.url-launcher:   /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5
URxvt.keysym.M-u:	  matcher:list
URxvt.keysym.M-p:	  matcher:select

! font-size extension - change font size on the fly.
! Disable default bindings.
URxvt.keysym.C-plus:   builtin-string:
URxvt.keysym.C-minus:  builtin-string:
URxvt.keysym.C-0:      builtin-string:
! Set custom bindings.
URxvt.keysym.M-equal:  font-size:increase
URxvt.keysym.M-minus:  font-size:decrease
URxvt.keysym.M-Up:     font-size:increase
URxvt.keysym.M-Down:   font-size:decrease
URxvt.keysym.M-S-Up:   font-size:incglobal
URxvt.keysym.M-S-Down: font-size:decglobal
URxvt.keysym.M-0:      font-size:reset
URxvt.keysym.M-grave:  font-size:show

! keyboard-select - move through text in terminal using vim bindings
URxvt.keysym.M-Escape: perl:keyboard-select:activate


